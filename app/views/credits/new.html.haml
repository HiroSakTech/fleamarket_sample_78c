.Back
  .Wrapper
    = render "./users/l-side"
    .creditCreate
      .creditCreate__title
        %h1 クレジットカード情報入力
      .creditForm
        = form_with method: :post do |f|
          .creditForm__numberfield
            %label(for="cardnumber-input") カード番号
            %span 必須
            %br
            = f.text_field :card_number, type: "text", class: 'cardnumber-input', placeholder: "半角数字のみ", maxlength: 16
            .creditslist
              = image_tag "jcb.gif", class:"creditsIcon"
              = image_tag "visa.gif", class:"creditsIcon"
              = image_tag "master.gif", class:"creditsIcon"
              = image_tag "amex.gif", class:"creditsIcon"
          .creditForm__datefield
            %label 有効期限
            %span 必須
            %br
            = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'dateSelect'
            月
            = f.select :exp_year, [["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'dateSelect'
            年
          .creditForm__securityfield
            %label セキュリティコード
            %span 必須
            %br
            = f.text_field :cvc, type: 'text', class: 'securityInput', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
          .creditForm__submitfield
            = f.submit '追加する', class: 'creditsSubmit', id: 'token_submit'


