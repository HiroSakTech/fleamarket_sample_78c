.InformationsPage
  .Informations__title
    = image_tag 'logo.png', class: "logo"
  .InformationsMain
    .InformationsPage__box
      .InformationsPage__box--name
        %h2 本人確認情報入力
      - if @profile.errors.any?
        .profileErrorField
          - @profile.errors.full_messages.each do |e|
            .profileErrorMessages
              = e
      .InformationsPage__box--form
        = form_with model: [@user, @profile], id: 'new_send_information', class: "SendInformation__inner__lists", local: true do |f|
          .InformationsFormField
            .InformationsFormField__lavel
              .InformationsFormField__lavel--normal
                = f.label :name, "お名前(全角)"
              %span 必須
            .InformationsFormField__input--normal
              = f.text_field :family_name, class:"input-half", placeholder:"例）山田"
              = f.text_field :first_name, class:"input-half", placeholder:"例）太朗"
          .InformationsFormField
            .InformationsFormField__lavel
              .InformationsFormField__lavel--normal
                = f.label :name, "お名前カナ(全角)"
              %span 必須
            .InformationsFormField__input--normal
              = f.text_field :family_name_kana, class:"input-half", placeholder:"例）ヤマダ"
              = f.text_field :first_name_kana, class:"input-half", placeholder:"例）タロウ"
          .InformationsFormField
            .InformationsFormField__lavel
              .InformationsFormField__lavel--normal
                = f.label :birth_date, "生年月日"
              %span 必須
            .InformationsFormField__input--normal
              %br/
              = f.date_select :birth_date, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1)
          .Informationsactions
            = f.submit "登録する", class:"register__btn"







